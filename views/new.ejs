<% include partials/header %>

<div class="ui container main header segment">
	<div class="ui huge header">New Blog Post</div>

	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[Title]" placeholder="Title goes here">
		</div>

		<div class="field">
			<label>Image Url</label>
			<input type="text" name="blog[Image]" placeholder="Image goes here">
		</div>

		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[Body]"></textarea>
		</div>
		
		<input class="ui blue basic big button" type="submit">
	</form>
</div>



<% include partials/footer %>